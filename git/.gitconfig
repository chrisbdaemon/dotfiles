[core]
	quotepath = false
	autocrlf = input
	safecrlf = false
	pager = cat
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log -n 15 --graph --pretty=format:'%C(cyan)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --all
	type = cat-file -t
	dump = cat-file -p
	pullrb = pull --rebase
[push]
	default = nothing
[mergetool]
	keepBackup = true
[pull]
	ff = only
[include]
	path = ~/.gitconfig_local
[init]
	defaultBranch = master
